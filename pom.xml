                                </featureArtifactDef>

                            </featureArtifacts>

                            <categories>
                                <!--Start of AS feature categories-->
                                <category>
                                    <id>org.wso2.appserver.category</id>
                                    <label>Application Server</label>
                                    <description>This category contains features required for WSO2 Application Server
                                    </description>
                                    <features>
                                        <catFeature>
                                            <id>org.wso2.appserver.application-hosting.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.application-mgt.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.javaee-runtime.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.miscellaneous.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.monitoring.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.multi-tenancy.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.registry-repository.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.single-sign-on.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.styling.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.tooling.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.appserver.user-mgt.nested.category</id>
                                            <version>${as.version}</version>
                                        </catFeature>
                                    </features>
                                </category>
                            </categories>

                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>