                                </featureArtifactDef>


                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.utils.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.styles.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.stratos.appserver.dashboard.ui.feature:${as.version}
                                </featureArtifactDef>

                                <!-- Jaggeryjs -->
                                <featureArtifactDef>
                                    org.jaggeryjs:org.jaggeryjs.feature:${jaggery.version}
                                </featureArtifactDef>

                                <!-- Category Features(Nested) -->
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.application-hosting.nested.category.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.application-mgt.nested.category.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.javaee-runtime.nested.category.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.miscellaneous.nested.category.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.monitoring.nested.category.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.multi-tenancy.nested.category.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
                                    org.wso2.appserver:org.wso2.appserver.registry-repository.nested.category.feature:${as.version}
                                </featureArtifactDef>
                                <featureArtifactDef>
