<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2</groupId>
        <artifactId>wso2</artifactId>
        <version>1</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon.feature</groupId>
    <artifactId>feature-repository</artifactId>
    <version>4.4.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Feature Repository</name>

    <url>http://wso2.org</url>

    <pluginRepositories>
        <pluginRepository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <carbon.p2.plugin.version>1.5.3</carbon.p2.plugin.version>

        <carbon.platform.version>4.4.0</carbon.platform.version>
        <carbon.deployment.version>4.4.0</carbon.deployment.version>
        <carbon.identity.version>4.4.0</carbon.identity.version>
        <carbon.commons.version>4.4.0</carbon.commons.version>
        <carbon.multitenancy.version>4.4.0</carbon.multitenancy.version>
        <carbon.registry.version>4.4.1</carbon.registry.version>
        <as.version>6.0.0-SNAPSHOT</as.version>

        <!-- Jaggery version -->
        <jaggery.version>0.10.1</jaggery.version>

        <!--<synapse.version>2.1.3-wso2v1-SNAPSHOT</synapse.version>-->
        <!--<stratos.version>6.0.0-SNAPSHOT</stratos.version>-->
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>2-p2-repo-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-repo-gen</goal>
                        </goals>
                        <configuration>
                            <metadataRepository>file:${basedir}/target/p2-repo</metadataRepository>
                            <artifactRepository>file:${basedir}/target/p2-repo</artifactRepository>
                            <publishArtifacts>true</publishArtifacts>
                            <publishArtifactRepository>true</publishArtifactRepository>
                            <featureArtifacts>

